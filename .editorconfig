# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Lua files
[*.lua]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Markdown files
[*.md]
max_line_length = 80
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space
indent_size = 2

